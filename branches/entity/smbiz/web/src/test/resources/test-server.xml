<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="smbiz-server-tests">
  
  <test name="entity-type-tests" annotations="JDK">
    <packages>
      <package name="com.tll.server.rpc.entity.*" />
    </packages>
  </test>

  <test name="marshal-tests" annotations="JDK">
    <packages>
      <package name="com.tll.server.marshal.*" />
    </packages>
  </test>

  <test name="server-bootstrap-test-db4o-nosecurity" annotations="JDK">
    <parameter name="daoImpl" value="db4o" />
    <parameter name="employSecurity" value="false" />
    <groups>
      <run>
        <include name="bootstrap" />
      </run>
    </groups>
    <packages>
      <package name="com.tll.server.*" />
    </packages>
  </test>
  
</suite>
