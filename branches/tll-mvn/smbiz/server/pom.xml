        <groupId>org.codehaus.groovy.maven</groupId>
        <artifactId>gmaven-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>execute</goal>
            </goals>
            <configuration>
              <!-- TODO figure out how to add config dir to classpath
              <classpath>
                <element>
                </element>
              </classpath>
              -->
              <source>${pom.basedir}/src/main/script/ResourceProcessor.groovy</source>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

