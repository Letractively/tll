<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="smbiz-dao-tests">
  
  <test name="dao-bootstrap-tests" annotations="JDK">
    <groups>
      <run>
        <include name="bootstrap" />
      </run>
    </groups>
    <classes>
      <class name="com.tll.di.DaoModuleTest" />
    </classes>
  </test>
  
  <test name="orm-dao-tests" annotations="JDK">
    <parameter name="daoMode" value="ORM" />
    <groups>
      <run>
        <include name="dao" />
      </run>
    </groups>
    <packages>
      <package name="com.tll.dao" />
    </packages>
  </test>
  
  <test name="mock-dao-tests" annotations="JDK">
    <parameter name="daoMode" value="MOCK" />
    <groups>
      <run>
        <include name="dao" />
      </run>
    </groups>
    <packages>
      <package name="com.tll.dao" />
    </packages>
  </test>
  
</suite>
