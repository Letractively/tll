<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="smbiz-server-tests">
  
  <test name="server-bootstrap-test-orm-nosecurity" annotations="JDK">
    <parameter name="daoMode" value="ORM" />
    <parameter name="securityMode" value="NONE" />
    <groups>
      <run>
        <include name="bootstrap" />
      </run>
    </groups>
    <packages>
      <package name="com.tll.server.*" />
    </packages>
  </test>

  <test name="server-bootstrap-test-orm-security" annotations="JDK">
    <parameter name="daoMode" value="ORM" />
    <parameter name="securityMode" value="ACEGI" />
    <groups>
      <run>
        <include name="bootstrap" />
      </run>
    </groups>
    <packages>
      <package name="com.tll.server.*" />
    </packages>
  </test>

  <test name="server-bootstrap-test-mock-nosecurity" annotations="JDK">
    <parameter name="daoMode" value="MOCK" />
