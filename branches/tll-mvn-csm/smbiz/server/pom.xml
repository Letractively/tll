  <parent>
    <groupId>com.tll</groupId>
    <artifactId>smbiz</artifactId>
    <version>0.9.0-SNAPSHOT</version>
  </parent>

  <groupId>com.tll</groupId>
  <artifactId>smbiz-server</artifactId>
  <name>smbiz-server</name>
  <version>${tll-smbiz.version}</version>
  <packaging>war</packaging>
  <description>The smbiz server app</description>

  <build>
    <finalName>smbiz-server</finalName>
    <filters>
      <filter>src/main/resources/config.properties</filter>
    </filters>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>false</filtering>
        <includes>
          <include>*.*</include>
        </includes>
        <excludes>
          <exclude>config.properties</exclude>
        </excludes>
      </resource>
      <resource>
        <directory>src/main/resources/db</directory>
        <filtering>false</filtering>
        <includes>
          <include>*.*</include>
        </includes>
      </resource>
      <resource>
        <directory>src/main/resources/refdata</directory>
        <filtering>false</filtering>
        <includes>
          <include>*.*</include>
        </includes>
      </resource>
      <!-- turn on resource filtering (variable interpolation) for the classes/META-INF dir -->
      <resource>
        <directory>src/main/resources/META-INF</directory>
        <filtering>true</filtering>
        <includes>
          <include>*.*</include>
        </includes>
        <targetPath>META-INF</targetPath>
      </resource>
    </resources>
  </build>

  <profiles>
    <profile>
      <id>prod</id>
      <build>
        <!-- unfortunately, we have to re-declare all resources declared in the base build -->
        <resources>
          <resource>
            <directory>src/main/resources</directory>
            <filtering>false</filtering>
            <includes>
              <include>*.*</include>
            </includes>
            <excludes>
              <exclude>config.properties</exclude>
              <exclude>mock-entities.xml</exclude><!--  exclude mock-entities.xml for production builds -->
            </excludes>
          </resource>
          <resource>
            <directory>src/main/resources/db</directory>
            <filtering>false</filtering>
            <includes>
              <include>*.*</include>
            </includes>
          </resource>
          <resource>
            <directory>src/main/resources/refdata</directory>
            <filtering>false</filtering>
            <includes>
              <include>*.*</include>
            </includes>
          </resource>
          <!-- turn on resource filtering (interpolate variables) for the META-INF files -->
          <resource>
            <directory>src/main/resources/META-INF</directory>
            <filtering>true</filtering>
            <includes>
              <include>*.*</include>
            </includes>
            <targetPath>META-INF</targetPath>
          </resource>
        </resources>
        <plugins>
          <plugin>
            <groupId>org.codehaus.groovy.maven</groupId>
            <artifactId>gmaven-plugin</artifactId>
            <executions>
              <execution>
                <id>build-deploy-webxml</id>
                <phase>package</phase>
                <goals>
                  <goal>execute</goal>
                </goals>
                <configuration>
                  <classpath>
                    <element>
                      <groupId>commons-lang</groupId>
                      <artifactId>commons-lang</artifactId>
                    </element>
                    <element>
                      <groupId>commons-collections</groupId>
                      <artifactId>commons-collections</artifactId>
                    </element>
                  </classpath>
                  <source><![CDATA[
                    println()
                    println('Building production web.xml file...')
                    
                    def NL = System.getProperty("line.separator")
                    
                    String srcWebXml = project.basedir.toString() + '/src/main/webapp/WEB-INF/web.xml'
                    String tgtWebXml = project.basedir.toString() + '/target/' + project.build.finalName + '/WEB-INF/web.xml'
                    //println('srcWebXml: ' + srcWebXml);
                    //println('tgtWebXml: ' + tgtWebXml);
                    
                    File f = new File(srcWebXml)
                    StringBuilder sbuf = new StringBuilder(3000)
                    f.eachLine{ line -> 
                      //sbuf.append(rplProps(line, property))
                      sbuf.append(line)
                      sbuf.append(NL)
                    }
                    
                    f = new File(project.basedir.toString() + '/target/' + project.build.finalName);
                    f.mkdir()
                    f = new File(project.basedir.toString() + '/target/' + project.build.finalName + '/WEB-INF');
                    f.mkdir()
                    
                    f = new File(tgtWebXml)
                    f.delete()
                    
                    // Extract GWTShellServlet && servlet-context from web.xml before copying
                    def regex_deploy = /(?s)<!-- START Hosted Mode Add-ons -->(.*)<!-- END Hosted Mode Add-ons -->/
                    f.write(sbuf.toString().replaceAll(regex_deploy, '').replaceFirst(/(?s)<web-app>\s+/, "<web-app>" + NL + '\t'))
                  ]]></source>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

