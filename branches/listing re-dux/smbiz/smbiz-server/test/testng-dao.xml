<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="smbiz-dao-tests" verbose="5">
  
  <test name="dao.factory">
    <groups>
      <run>
        <include name="dao.schema" />
      </run>
    </groups>
    <classes>
      <class name="com.tll.dao.DaoFactoryTest" />
    </classes>
  </test>

  <test name="hibernate.environment">
    <classes>
      <class name="com.tll.dao.hibernate.HibernateEnvironmentTest" />
    </classes>
  </test>

  <test name="dao.impl.mock">
    <parameter name="daoMode" value="MOCK" />
    <groups>
      <run>
        <include name="dao" />
      </run>
    </groups>
    <classes>
      <class name="com.tll.dao.impl.*" />
    </classes>
  </test>
  
  <test name="dao.impl.hibernate">
    <parameter name="daoMode" value="ORM" />
    <groups>
      <run>
        <include name="dao" />
      </run>
    </groups>
    <classes>
      <class name="com.tll.dao.impl.*" />
    </classes>
  </test>

</suite>