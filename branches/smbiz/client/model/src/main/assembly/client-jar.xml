<assembly>
  <id>client</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>jar</format>
  </formats>
  
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/client/**</include>
        <include>**/common/**</include>
        <include>**/public/**</include>
        <include>**/*.gwt.xml</include>
      </includes>
    </fileSet>
  </fileSets>
  
  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>com.tll:tll-model:*</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>**/schema/PropertyType.*</include>
          <include>**/schema/ISchemaProperty.*</include>
          <include>**/schema/AbstractSchemaProperty.*</include>
          <include>**/schema/PropertyMetadata.*</include>
          <include>**/schema/IPropertyMetadataProvider.*</include>
        </includes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>com.tll:tll-dao:*</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>**/criteria/IPropertyNameProvider.*</include>
          <include>**/criteria/CriteriaType.*</include>
          <include>**/criteria/IQueryParam.*</include>
        </includes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>com.tll:tll-refdata:*</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>**/refdata/RefDataType.*</include>
        </includes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
  
</assembly>