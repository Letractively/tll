<assembly>
  <id>all</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>jar</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>${project.build.outputDirectory}</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>

  <!-- groupId:artifactId:type:classifier -->
  <dependencySets>

    <!-- 
      merge in the tll-dao-api classes
      as well as tll-mock! 
    -->
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <useProjectArtifact>true</useProjectArtifact>
      <includes>
        <include>com.tll:tll-dao-api</include>
        <include>com.tll:tll-mock</include>
      </includes>
    </dependencySet>

  </dependencySets>

</assembly>