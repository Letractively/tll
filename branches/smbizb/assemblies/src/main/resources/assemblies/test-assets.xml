<!--
Creates a jar containing test assets for the project this assembly 
is applied to allowing dependent projects to extend them. 
-->
<assembly>
  <id>testassets</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <formats>
    <format>jar</format>
  </formats>

  <fileSets>
    <fileSet>
      <directory>target/test-classes</directory>
      <!-- exclude concrete tests that test util related! -->
      <excludes>
        <exclude>**/*UtilTest*</exclude>
        <exclude>**/SimpleEntityDaoTest*</exclude><!-- hack -->
      </excludes>
      <includes>
        <include>**/I*</include><!-- include interfaces -->
        <include>**/Abstract*Test*</include>
        <include>**/*Util*</include>
        <include>**/*Support*</include>
        <include>**/mock/**</include><!-- TODO: maybe change this dir to testassets to avoid unwanted test assets under mock dirs -->
        <include>**/TestEntityDaoTestHandler*</include><!-- hack -->
      </includes>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>

</assembly>