<?xml version="1.0" encoding="UTF-8"?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 
  http://maven.apache.org/xsd/assembly-1.1.0.xsd">

	<!--
    Aggregates all tll server-side deps into a single jar excluding smbiz-model and smbiz-persist. 
  -->

	<id>tll-server-aggregate-db4o</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>jar</format>
	</formats>

	<!-- groupId:artifactId:type:classifier -->
	<dependencySets>

		<!--
			we jar up all tll deps *including* those in smbiz-model/persist
			which kills the separation between smbiz and dependent tll modules
			but there is no workable alternative as i see it currently.. 
		-->
		<dependencySet>
			<scope>runtime</scope>
			<unpack>true</unpack>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<includes>
				<include>com.tll:*</include>
			</includes>
			<unpackOptions>
				<excludes>
					<exclude>**/*.java</exclude>
					<exclude>**/*.gwt.xml</exclude>
					<exclude>**/client/**</exclude>
					<exclude>**/common/**/*Async*</exclude>
					<exclude>**/public/**</exclude>
					<exclude>**/db/**</exclude>
				</excludes>
			</unpackOptions>
		</dependencySet>
		
		<!--
			Maven doesn't offer a viable way to extract tll deps *excluding* those in smbiz-model/persist 
		-->
		<!-- 
		transitive tll deps for smbiz-persist (which *should* include smbiz-model by way of transitive dependencies)
		<dependencySet>
			<scope>runtime</scope>
			<unpack>true</unpack>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<useTransitiveDependencies>true</useTransitiveDependencies>
			<useTransitiveFiltering>true</useTransitiveFiltering>
			<includes>
				<include>com.tll:smbiz-persist:jar:${daoImpl}</include>
			</includes>
			<unpackOptions>
				<excludes>
					<exclude>**/*.java</exclude>
					<exclude>**/*.gwt.xml</exclude>
					<exclude>**/client/**</exclude>
					<exclude>**/common/**/*Async*</exclude>
					<exclude>**/public/**</exclude>
				</excludes>
				<includes>
					<include>com/tll/**</include>
				</includes>
			</unpackOptions>
		</dependencySet>

		smbiz-web tll deps
		<dependencySet>
			<scope>runtime</scope>
			<unpack>true</unpack>
			<outputDirectory>/</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
			<excludes>
				<exclude>com.tll:smbiz-model</exclude>
				<exclude>com.tll:smbiz-persist</exclude>
			</excludes>
			<unpackOptions>
				<excludes>
					<exclude>**/*.java</exclude>
					<exclude>**/*.gwt.xml</exclude>
					<exclude>**/client/**</exclude>
					<exclude>**/common/**/*Async*</exclude>
					<exclude>**/public/**</exclude>
				</excludes>
				<includes>
					<include>com/tll/**</include>
				</includes>
			</unpackOptions>
		</dependencySet>
		-->

	</dependencySets>
	
</assembly>